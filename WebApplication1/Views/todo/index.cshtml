@model IEnumerable<WebApplication1.Models.Todo>
@{
    Layout = "~/Views/Shared/default.cshtml";
}

<div class="container">
    <div class="header">
        <h1>TODO list</h1>
    </div>

    @foreach (var t in this.Model)
    { 

        <p> 
        @t.Id  @t.Name
        @Url.Link(WebApplication1.Controllers.TodoController.Urls.Edit(@t.Id), "Edit")
        </p>    

    }

    @Url.Link(WebApplication1.Controllers.TodoController.Urls.New(), "New")
	
</div>
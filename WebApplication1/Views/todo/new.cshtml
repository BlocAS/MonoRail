@using WebApplication1.Controllers
@model WebApplication1.Models.Todo
@{
    Layout = "~/Views/Shared/default.cshtml";
}
           
<div class="container">
    <div class="header">
        <h1>TODO</h1>
    </div>

    @(Form.FormFor(TodoController.Urls.Create(), builder => {
        @<fieldset id="contactForm">
            @builder
            
			<legend>Message</legend>
            
			<p>
                @@Html.Label("Name", "Name"): 
                @@Html.TextInput("Name")
                @@( Html.TextInput<WebApplication1.Models.Todo>(t => t.Name))
            </p>
			
            <p>
                @@Html.Label("Email", "Email"): 
                @@Html.TextInput("Email")
            </p>

            @item.FieldsFor("", fbuilder => { 
				<fieldset>

				<p>
					<input type="submit" value="Send" />
				</p>
				
				</fieldset>
			})
		
		}
    ) ) 
	
